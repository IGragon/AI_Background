<resources>

    <!-- Base application theme. -->

    <style name="Headers">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/headerColor</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="titleTextColor">@color/headerColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/headerColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/secondaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
